include ../heading/heading
include ../checkbox/checkbox

mixin checkbox-rich({ title, items } = {})
  div.checkbox-rich
    div.checkbox-rich__title
      +heading({text: title, variant: 'h3'})
    each item in items
      - const { checkbox, info } = item;
      div.checkbox-rich__checkbox
        +checkbox(checkbox)
      p.checkbox-rich__info= info