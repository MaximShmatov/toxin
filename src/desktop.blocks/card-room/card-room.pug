include ../rate-button/rate-button

mixin card-room
	form.card-room
		div.card-room__slider
			input(type="radio" name="card-room__slider-radio" value="1" data-dir="").card-room__slider-radio
			div.card-room__slider-item
			img(src="" alt="").card-room__slider-img
			input(type="radio" name="card-room__slider-radio" value="2" data-dir="").card-room__slider-radio
			div.card-room__slider-item
			img(src="" alt="").card-room__slider-img
			input(type="radio" name="card-room__slider-radio" value="3" data-dir="").card-room__slider-radio
			div.card-room__slider-item
			img(src="" alt="").card-room__slider-img
			input(type="radio" name="card-room__slider-radio" value="4" data-dir="" checked).card-room__slider-radio
			div.card-room__slider-item
			img(src="" alt="").card-room__slider-img
			div.card-room__slider-control
				div.card-room__slider-control-left
					button(type="button").card-room__slider-control-left-button
				div.card-room__slider-control-right
					button(type="button").card-room__slider-control-right-button
		div.card-room__price
			span &#8470;&#160;
			a(href="page_room_details.html").card-room__price-number
			span.card-room__price-level
			span &#8381 в сутки
			strong.card-room__price-amount
		div.card-room__review
			div.card-room__review-rate-button
				+rate-button
			strong.card-room__review-quantity
			span &#160;Отзывов