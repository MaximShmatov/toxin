mixin copyright(props = {})
  -
    const { theme } = props
    const refs = [
      'http://twitter.com',
      'http://facebook.com',
      'http://instagram.com',
    ]
  div.copyright__wrapper(class=`copyright_theme_${theme}`)
    div.copyright
      img.copyright__logo(src="img/template-site-logo.svg" alt="toxin logo")
      p.copyright__caption Copyright &copy; 2018 Toxin отель. Все права зачищены.
      div.copyright__social
        - for (let i = 0; i < 3; i++)
          a.copyright__social-icon(href=refs[i] target="_blank" rel="noopener noreferrer")
