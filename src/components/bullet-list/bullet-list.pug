mixin bullet-list(props)
  - let { header } = props
  if (header)
    h3.bullet-list__title=header
  ul.bullet-list__items
    li.bullet-list__item Нельзя с питомцами
    li.bullet-list__item Без вечеринок и мероприятий
    li.bullet-list__item Время прибытия &mdash; после 13:00, <br> а выезд до 12:00