extends ../template-main/template-main

include ../../components/header/header
include ../../components/footer/footer
include ../../components/copyright/copyright

block page
  -
    const copyrightContent = require('../../components/copyright/copyright.json');
    const headerData = require('../../components/header/header.json');
    const footerData = require('../../components/footer/footer.json');

  body.site-template
    header.site-template__header
      +header({data: headerData})
    main.site-template__main
      block page-site
    footer.site-template__footer
      +footer(footerData)
    section.site-template__copyright
      +copyright({content: copyrightContent})