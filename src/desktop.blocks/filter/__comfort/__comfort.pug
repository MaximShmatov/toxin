include ../../button/button
include ../../checkbox/checkbox

mixin filter__comfort
	div.filter__comfort
		div.filter__comfort-head
			h3 Дополнительные удобства
			label.filter__comfort-head-button
				input(type="checkbox").filter__comfort-head-button-true
				div.filter__comfort-head-button-false
		div.filter__comfort-picker
			label.filter__comfort-picker-item Завтрак
				div.filter__comfort-picker-item-checkbox
					+checkbox({name: 'breakfast'})
			label.filter__comfort-picker-item Письменный стол
				div.filter__comfort-picker-item-checkbox
					+checkbox({name: 'table', checked: 'checked'})
			label.filter__comfort-picker-item Стул для кормления
				div.filter__comfort-picker-item-checkbox
					+checkbox({name: 'chair', checked: 'checked'})
			label.filter__comfort-picker-item Кроватка
				div.filter__comfort-picker-item-checkbox
					+checkbox({name: 'bed', checked: 'checked'})
			label.filter__comfort-picker-item Телевизор
				div.filter__comfort-picker-item-checkbox
					+checkbox({name: 'tv'})
			label.filter__comfort-picker-item Шампунь
				div.filter__comfort-picker-item-checkbox
					+checkbox({name: 'shampoo'})
