include ../rate-button/rate-button

mixin card-room(props = {})
	- const name = Math.random();
	div.card-room.js-card-room
		div.card-room__slider
			- for (let i = 0; i < 4; i++)
				input.card-room__slider-radio.js-card-room__slider-radio(type="radio" name= name value= i checked= (i === 3))
				div.card-room__slider-item
				img.card-room__slider-img.js-card-room__slider-img
			div.card-room__slider-control
				div.card-room__slider-control-left
					button.card-room__slider-control-left-button.js-card-room__slider-control-left-button(type="button")
				div.card-room__slider-control-right
					button.card-room__slider-control-right-button.js-card-room__slider-control-right-button(type="button")
		div.card-room__price
			div.card-room__price-room
				span.card-room__price-number.js-card-room__price-number
				span.card-room__price-level.js-card-room__price-level
			div.card-room__price-pay.js-card-room__price-pay
		div.card-room__review
			+rate-button({})
			div.card-room__review-quantity.js-card-room__review-quantity