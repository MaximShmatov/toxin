include ../button/button

mixin dropdown-quantity(props = {})
	- const { header } = props
	div.dropdown-quantity.js-dropdown-quantity
		h3.dropdown-quantity__title=header
		button.dropdown-quantity__head.js-dropdown-quantity__head(type="button")
			span.dropdown-quantity__head-out.js-dropdown-quantity__head-out
			div.dropdown-quantity__head-arrow
		div.dropdown-quantity__picker.js-dropdown-quantity__picker
			- for (let i = 0; i < 3; i++)
				div.dropdown-quantity__picker-item
					span.dropdown-quantity__picker-item-header.js-dropdown-quantity__picker-item-header
					div.dropdown-quantity__picker-item-quantity
						input.dropdown-quantity__picker-item-quantity-minus.js-dropdown-quantity__picker-item-quantity-minus(type="button" value="-" disabled)
						span.dropdown-quantity__picker-item-quantity-amount.js-dropdown-quantity__picker-item-quantity-amount 0
						input.dropdown-quantity__picker-item-quantity-plus.js-dropdown-quantity__picker-item-quantity-plus(type="button" value="+")
			div.dropdown-quantity__picker-item.js-dropdown-quantity__picker-item
				div.dropdown-quantity__picker-item-clear.js-dropdown-quantity__picker-item-clear
					+button({type:"button", theme: "texted", text: "Очистить"})
				div.dropdown-quantity__picker-item-submit.js-dropdown-quantity__picker-item-submit
					+button({type:"button", theme: "texted", text: "Применить"})