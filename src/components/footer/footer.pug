include ../subscription/subscription

mixin footer
	div.footer__wrapper
		div.footer
			section.footer__logo
				img.footer__logo-img(alt="logo" src="img/template-site-logo.svg")
				p.footer__logo-caption Бронирование номеров в лучшем отеле 2019 года по версии ассоциации &laquo;Отельные взгляды&raquo;
			nav.footer__nav
				div.footer__nav-block
					h3.footer__nav-items-title Навигация
					ul.footer__nav-items
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") О нас
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Новости
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Служба поддержки
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Услуги
				div.footer__nav-block
					h3.footer__nav-items-title О нас
					ul.footer__nav-items
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") О сервисе
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Наша команда
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Вакансии
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Инвесторы
				div.footer__nav-block
					h3.footer__nav-items-title Служба поддержки
					ul.footer__nav-items
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Соглашения
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Сообщества
						li.footer__nav-items-item
							a.footer__nav-items-item-ref(href="/mock-address") Связь с нами
			section.footer__subscription
				h3.footer__subscription-title Подписка
				p.footer__subscription-caption Получайте специальные предложения и новости сервиса
				div.footer__subscription-form
					+subscription