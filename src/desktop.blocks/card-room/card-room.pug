include ../rate-button/rate-button

mixin card-room
	-let name = Math.random();
	div.card-room
		div.card-room__slider
			input.card-room__slider-radio(type="radio" name=name value="1" data-dir="")
			div.card-room__slider-item
			img.card-room__slider-img(src="" alt="")
			input.card-room__slider-radio(type="radio" name=name value="2" data-dir="")
			div.card-room__slider-item
			img.card-room__slider-img(src="" alt="")
			input.card-room__slider-radio(type="radio" name=name value="3" data-dir="")
			div.card-room__slider-item
			img.card-room__slider-img(src="" alt="")
			input.card-room__slider-radio(type="radio" name=name value="4" data-dir="" checked)
			div.card-room__slider-item
			img.card-room__slider-img(src="" alt="")
			div.card-room__slider-control
				div.card-room__slider-control-left
					button.card-room__slider-control-left-button(type="button")
				div.card-room__slider-control-right
					button.card-room__slider-control-right-button(type="button")
		div.card-room__price
			div.card-room__price-room
				h3 &#8470;&#x2002;
				h2.card-room__price-number-header
					output.card-room__price-number
				h3.card-room__price-level-header
					output.card-room__price-level
			div.card-room__price-pay
				output.card-room__price-pay-amount
				span &#x20bd;&#8194;
				span в сутки
		div.card-room__review
			+rate-button
			output.card-room__review-quantity
			span &#160;Отзывов