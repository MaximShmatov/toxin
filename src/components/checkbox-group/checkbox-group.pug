include ../checkbox/checkbox

mixin checkbox-group(props)
  - let { header } = props
  div.checkbox-group
    if (header)
      h3.checkbox-group__title=header
    div.checkbox-group__checkbox
      +checkbox({name: "smoke", caption: "Можно курить", isChecked: false})
    div.checkbox-group__checkbox
      +checkbox({name: "pet", caption: "Можно с питомцами", isChecked: true})
    div.checkbox-group__checkbox
      +checkbox({name: "guests", caption: "Можно пригласить гостей", isChecked: true})
      span.checkbox-group__checkbox-note (до 10 человек)