include ../checkbox/checkbox

mixin checkbox-list({ title, isChecked, items } = {})
  - const id = Math.random();

  div.checkbox-list
    input.checkbox-list__check(type="checkbox" id= id checked= isChecked)
    label.checkbox-list__body(for= id)
      h3.checkbox-list__body-title= title
      div.checkbox-list__body-arrow
    div.checkbox-list__picker
      - for (let i = items.reverse().length; i > 0; i--)
        div.checkbox-list__picker-item
          +checkbox(items.pop())
