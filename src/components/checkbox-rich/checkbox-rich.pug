include ../checkbox/checkbox

mixin checkbox-rich({title = ''} = {})
	div.checkbox-rich.js-checkbox-rich
		h3.checkbox-rich__title.js-checkbox-rich__title= title
		- for (let i = 0; i < 2; i++)
			div.checkbox-rich__checkbox.js-checkbox-rich__checkbox
				+checkbox
			p.checkbox-rich__info.js-checkbox-rich__info
