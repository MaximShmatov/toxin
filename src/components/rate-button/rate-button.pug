mixin rate-button({ rate = 1 } = {})
	-
		const id = Math.random();
		const rateCount = 5;

	form.rate-button
		- for (let i = rateCount; i > 0; i -= 1)
			input.rate-button__radio(
				type="radio"
				name=id
				id=(id - i)
				value=i
				data-rate=rate
				checked=(rate === (6 - i))
			)
			label.rate-button__star(for=(id - i))