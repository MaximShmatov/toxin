include ../button/button

mixin dropdown-quantity
	div.dropdown-quantity(tabindex="0")
		div.dropdown-quantity__head
			output.dropdown-quantity__head-out(name="dropdown__head-out")
			button.dropdown-quantity__head-button(type="button")
		div.dropdown-quantity__picker
			div.dropdown-quantity__picker-item
				h3.dropdown-quantity__picker-item-header
				div.dropdown-quantity__picker-item-quantity
					button.dropdown-quantity__picker-item-quantity-minus(type="button" disabled) -
					h3.dropdown-quantity__picker-item-quantity-amount-header
						output.dropdown-quantity__picker-item-quantity-amount 0
					button.dropdown-quantity__picker-item-quantity-plus(type="button") +
			div.dropdown-quantity__picker-item
				h3.dropdown-quantity__picker-item-header
				div.dropdown-quantity__picker-item-quantity
					button.dropdown-quantity__picker-item-quantity-minus(type="button" disabled) -
					h3.dropdown-quantity__picker-item-quantity-amount-header
						output.dropdown-quantity__picker-item-quantity-amount 0
					button.dropdown-quantity__picker-item-quantity-plus(type="button") +
			div.dropdown-quantity__picker-item
				h3.dropdown-quantity__picker-item-header
				div.dropdown-quantity__picker-item-quantity
					button.dropdown-quantity__picker-item-quantity-minus(type="button" disabled) -
					h3.dropdown-quantity__picker-item-quantity-amount-header
						output.dropdown-quantity__picker-item-quantity-amount 0
					button.dropdown-quantity__picker-item-quantity-plus(type="button") +
			div.dropdown-quantity__picker-item
				div.dropdown-quantity__picker-item-clear
					+button({type:"button", mode: "picker-grey", text: "Очистить"})
				div.dropdown-quantity__picker-item-submit
					+button({type:"button", mode: "picker", text: "Применить"})