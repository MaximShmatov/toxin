include ../button/button

mixin date-picker
	div.date-picker
		div.date-picker__header
			div.date-picker__list-left
				+button({type: 'button', mode: 'arrow-left'})
			h3.date-picker__title
			div.date-picker__list-right
				+button({type: 'button', mode: 'arrow-right'})
		table.date-picker__table
			thead
				tr
					-for (let i = 0; i < 7; i++)
						th.date-picker__table-header
			tbody
				-for (let i = 1; i < 6; i++)
					tr
						-for (let j = 1; j < 8; j++)
							td
								button(type="button").date-picker__table-date
		div.date-picker__footer
			div.date-picker__clear
				+button({type: 'button', mode: 'picker-grey', text: 'Очистить'})
			div.date-picker__submit
				+button({type: 'button', mode: 'picker', text: 'Применить'})