mixin copyright({ theme, content } = {})
  -
    const themes = { 'tablet': 'copyright_theme_tablet' };
    const { logo, caption, links } = content;
    const { src, alt } = logo;

  div.copyright(class=themes[theme])
    div.copyright__wrapper
      img.copyright__logo(src=src alt=alt)
      p.copyright__caption= caption
      div.copyright__social
        - for (let i = links.reverse().length; i > 0; i--)
          a.copyright__social-icon(href=links.pop() target="_blank" rel="noopener noreferrer")