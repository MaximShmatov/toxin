mixin button(props = {})
  -
    const {
      type, text, theme, size, isDisabled
    } = props
    const themes = {
      'filled': 'theme_filled',
      'bordered': 'theme_bordered',
      'arrowed': 'theme_arrowed',
      'texted': 'theme_texted',
    };
    const sizes = {
      'header-small': 'size_header-small',
      'header-large': 'size_header-large',
      'form-small': 'size_form-small',
      'form-large': 'size_form-large',
    }
    const classes = [
      'button',
      `button_${themes[theme]}`,
      `button_${sizes[size]}`
    ]
  button(type= type class= classes disabled= isDisabled)
    span.button__caption.js-button__caption= text