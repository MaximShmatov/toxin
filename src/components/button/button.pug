mixin button({ type, text, theme, size, isDisabled } = {})
  -
    const themes = {
      'filled': 'theme_filled',
      'bordered': 'theme_bordered',
      'arrowed': 'theme_arrowed',
      'texted': 'theme_texted',
    };
    const sizes = {
      'small-first': 'size_small-first',
      'large-first': 'size_large-first',
      'small-second': 'size_small-second',
      'large-second': 'size_large-second',
    }
    const classes = [
      'button',
      `button_${themes[theme]}`,
      `button_${sizes[size]}`
    ]
  button(type= type class= classes disabled= isDisabled)
    span.button__caption.js-button__caption= text