include ../date-range/date-range
include ../dropdown-quantity/dropdown-quantity
include ../button/button

mixin form-reservation
	form.form-reservation
		fieldset.form-reservation__wrapper
			div.form-reservation__room
				div.form-reservation__room-info
					h3.form-reservation__room-info-header &#8470;&nbsp;&nbsp;
					h1.form-reservation__room-info-number-header
						output.form-reservation__room-info-number
					h3.form-reservation__room-info-level-header
						output.form-reservation__room-info-level
				div.form-reservation__room-price
					output.form-reservation__room-price-amount
					span &#x20bd;&#8194;
					span в сутки
			div.form-reservation__date
				div.form-reservation__date-title
					h3.form-reservation__date-title-in Прибытие
					h3.form-reservation__date-title-out Выезд
				+date-range
			div.form-reservation__guests
				h3.form-reservation__guests-header Гости
				+dropdown-quantity

			div.form-reservation__pay
				div.form-reservation__pay-days
					output.form-reservation__pay-days-price
					span &#x20bd; x
					output.form-reservation__pay-days-quantity
					span &#160;суток
				div.form-reservation__pay-amount
					output.form-reservation__pay-amount-total
					span &#x20bd;

				div.form-reservation__pay-services
					span Сбор за услуги: скидка
					output.form-reservation__pay-services-price
					span &#x20bd;
				span.form-reservation__pay-services-info i
				div.form-reservation__pay-services-amount
					output.form-reservation__pay-services-amount-total
					span &#x20bd;

				div.form-reservation__pay-additionally
					span Сбор за дополнительные услуги
				span.form-reservation__pay-additionally-info i
				div.form-reservation__pay-additionally-amount
					output.form-reservation__pay-additionally-amount-total
					span &#x20bd;

			div.form-reservation__total
				h2.form-reservation__total-header Итого
				div.form-reservation__total-separator
				div.form-reservation__total-amount
					h2.form-reservation__total-amount-header
						output.form-reservation__total-amount
						span &#x20bd;
			div.form-reservation__submit
				+button({type: "button", text: "Забронировать", mode: "forward"})